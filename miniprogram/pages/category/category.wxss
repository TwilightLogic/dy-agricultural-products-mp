/* pages/category/category.wxss */
.left-box {
  box-sizing: border-box;
  color: #666;
  font-size: 24rpx;
}

.normal-type-box {
  height: 96rpx;
  width: 100%;
}

.selected-type-box {
  height: 96rpx;
  width: 100%;
  background-color: #fff;
  border-left: 8rpx solid #7a9d54;
  color: #7a9d54;
  font-weight: 500;
}

.goods-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 22rpx;
}

/* 搜索后的小弹窗 */
.searh-result-box {
  width: 94%;
  height: 400rpx;
  position: fixed;
  top: 98rpx;
  z-index: 999;
}

.search-list-img {
  width: 98rpx;
  height: 98rpx;
  border-radius: 22rpx;
}
