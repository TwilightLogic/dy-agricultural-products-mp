/* pages/admin_manage_order/admin_manage_order.wxss */
.status-container {
  height: 6vh;
  color: #333;
  font-size: 24rpx;
  border-bottom: 2rpx solid #e9e9e9;
  background-color: #fff;
}

.select-header {
  height: 100%;
  color: #7a9d54;
  position: relative;
}

.select-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #7a9d54; /* 或者使用其他样式来模拟下边框 */
}

.order-container {
  height: 89vh;
  width: 100%;
}

.goods-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 22rpx;
}
