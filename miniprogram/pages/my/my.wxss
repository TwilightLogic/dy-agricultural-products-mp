.user-msg-container {
  background-color: #7a9d54;
  height: 25vh;
}

.user-msg-container .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 22rpx;
}

.order-container {
  background-color: #fff;
  border-radius: 22rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.05);
}

.order-container .icon-title {
  color: #333;
  font-size: 24rpx;
}

.function-container {
  background-color: #fff;
  margin-top: 32rpx;
  border-radius: 22rpx;
}

.function-list {
  height: 128rpx;
  margin-bottom: 12rpx;
}

.function-item {
  width: 33%;
}
