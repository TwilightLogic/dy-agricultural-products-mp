  background-color: #7a9d54;
  font-size: 28rpx;
  color: #fff;
  height: 20vh;
}

.manage-container-box {
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.05);
  border-radius: 22rpx;
  width: 48%;
  height: 192rpx;
  background-color: #fff;
}

.manage-container-box text {
  color: #333;
  font-size: 24rpx;
}

.manage-container-img {
  width: 96rpx;
}

.statistics-box {
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.05);
  border-radius: 22rpx;
