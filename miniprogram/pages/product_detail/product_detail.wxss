.detail-swiper {
  width: 100%;
  height: 700rpx;
}

.detail-swiper-img {
  width: 100%;
  height: 700rpx;
}

.product-msg {
  background-color: #fff;
  border-radius: 22rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.05);
}

.product-msg-sales {
  margin-top: 32rpx;
}

.product-msg-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.product-msg-sales text {
  color: #999;
  font-size: 24rpx;
}

.select-box {
  background-color: #fff;
  border-radius: 22rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.05);
  margin-top: 28rpx;
}

.select-box text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.specs-box {
  flex-wrap: wrap;
}

.specs-box--btn {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 12rpx;
}

.product-msg-detail-img {
  width: 100%;
}

.submit-bar-box {
  z-index: 99;
}
