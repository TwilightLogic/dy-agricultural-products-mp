/* pages/my_order/my_order.wxss */
.order-header {
  height: 6vh;
  color: #333;
  font-size: 24rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.select-header {
  height: 100%;
  color: #7a9d54;
  position: relative;
}

.select-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #7a9d54; /* 或者使用其他样式来模拟下边框 */
}

.order-history-container {
  width: 100%;
  height: 94vh;
}

.order-item {
  background-color: #fff;
  border-radius: 22rpx;
  margin-bottom: 22rpx;
  font-size: 24rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.05);
}

.goods-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 22rpx;
}
